<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/lib/assets/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/assets/css/material-dashboard.css" rel="stylesheet" />
        <link href="~/lib/assets/css/demo.css" rel="stylesheet" />

    </environment>
    <environment include="Development">
        <script src="~/lib/assets/js/arrive.min.js"></script>
        <script src="~/lib/assets/js/bootstrap-notify.js"></script>
        <script src="~/lib/assets/js/demo.js"></script>
        <script src="~/lib/assets/js/material.min.js"></script>
        <script src="~/lib/assets/js/bootstrap.min.js"></script>
        <script src="~/lib/assets/js/material-dashboard.js"></script>
        <script src="~/lib/assets/js/jquery-3.2.1.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">            
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @await Html.PartialAsync("_NavBar")
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div class="sidebar" data-color="purple" data-image="~/lib/assets/img/sidebar-1.jpg">
            <div class="logo">
                <a href="#" class="simple-text">
                    WEBAPP Admin Pages
                </a>
            </div>
            <div class="sidebar-wrapper">
                @await Html.PartialAsync("_Sidebar_Left")
            </div>
        </div>
        <div class="main-panel">
            @RenderBody()
        </div>
    </div>
</body>
</html>
